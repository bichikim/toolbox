{
  "compilerOptions": {
    /* Basic Options */
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    /*"outFile": "./build/app.js",*/
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "_templates"
  ],
  "compileOnSave": false
}
